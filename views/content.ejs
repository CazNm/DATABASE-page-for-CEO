<!DOCTYPE html>
<html>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <head>
        <meta charset="utf-8" />
        <title>ADMIN PAGE</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            html,
            body {
                height: 100%;
            }
            body {
                position: relative;
                background-color: rgb(36, 36, 36);
            }

            li {
                list-style: none;
            }
            a {
                text-decoration: none;
            }

            /*logo design  */

            #wrap1 {
                position: fixed;
                top: 0px;
                z-index: 2000;
                box-sizing: content-box;
                width: 100%;
                padding: 0px;
                margin: 0px;
                float: left;
            }
            header {
                width: 100%;
                height: 70px;

                background-color: #ffffff;
                box-shadow: 0 1px 10px #0000007c;
                float: left;
            }

            .logo {
                display: inline-block;
                margin: 10px;
                font-size: 30px;
                padding: 10px;
                color: #ffffff;
                text-shadow: 0px 0px 3px #000000;
            }
            /*profile design  */
            #wrap2 {
                position: fixed;
                top: 0px;

                float: left;
                width: 1000%;
                height: 68px;
                padding: 10px;
                margin: 70px 0px 0px 0px;
                border-radius: 0px 0px 6px 0px;
                background: linear-gradient(
                    90deg,
                    rgba(37, 141, 17, 0.2),
                    rgba(39, 128, 69, 0) 60%
                );
                border-color: #808080;
                border-style: solid;
                background-color: #5e6063;
                z-index: 1000;
            }
            #avatar {
                float: left;
                margin: 0px 4px;
            }
            .User_name {
                position: absolute;
                top: 10px;
                left: 10px;
                display: inline-block;
                height: 10px;
                margin: 10px;
                color: rgb(170, 245, 216);
                font-size: 20px;
                z-index: 10;
            }

            .User_name_shd {
                position: absolute;
                top: 13px;
                left: 13px;
                display: inline-block;
                height: 10px;
                margin: 10px;
                color: rgb(53, 53, 53);
                font-size: 20px;
                z-index: 5;
            }
            /* chat room list skeleton */
            #wrap3 {
                position: relative;
                top: 138px;
                box-sizing: content-box;
                width: 100%;
                height: 80%;
                background: linear-gradient(
                    90deg,
                    rgba(37, 141, 17, 0.2),
                    rgba(39, 128, 69, 0) 60%
                );
                background-color: rgb(54, 54, 54);
                z-index: 0;
            }
            #wrap3 > ul {
                margin: 0 auto;
                box-sizing: border-box;
                border: 3px;
                border-radius: 0px 6px 6px 6px;
                border-style: solid;
                border-color: rgb(97, 103, 109);
                display: block;
                top: 0px;
                width: 70%;
                height: 100%;
                background: linear-gradient(
                    90deg,
                    rgba(37, 141, 17, 0.2) 1%,
                    rgb(39, 128, 69, 0)
                );
                background-color: rgb(143, 153, 163);
                overflow: auto;
            }
            #wrap3 > ul > li {
                font-size: 20px;
                display: block;
                width: 98%;
                box-sizing: border-box;
                height: 60px;
                padding: 15px;
                border: 3px;
                border-color: #000000;
                border-style: solid;
                border-radius: 6px;
                margin: 1% auto;
                text-align: center;
            }

            #wrap3 > ul > form > li > button {
                float: right;
                margin: 10px;
                box-sizing: content-box;
                width: 50px;
                height: 25px;
            }
            /* chat & edit profile */
            #wrap4 {
                position: fixed;
                left: 50%;
                box-sizing: content-box;
                width: 50%;
                height: 88%;
                margin: 70px 0px 0px 0px;
                background-color: rgb(62, 64, 66);
            }
            .profile {
                position: relative;
                text-align: center;
                font-size: 30px;
            }
        </style>
    </head>
    <body>
        <div id="wrap1">
            <header>
                <p class="logo">AdminPage For T.I.C</p>
                <button name="user_id" value="<%= username %>"></button>
            </header>
        </div>
        <div id="wrap2">
            <p class="User_name" id="User_name">ADMIN</p>
            <p class="User_name_shd">ADMIN</p>
        </div>
        <div id="wrap3">
            <ul id="list1">
                <li>
                    <%=data_name %>
                </li>
            </ul>
        </div>
        <script>
            $(document).ready(function(){
                var data_type = <%= data_type%>;
                console.log(data_type);

                if(data_type === 0){
                    var data_reg = '<%-data_rd %>'.split(',');
                    var data_city = '<%-data_fr %>'.split(',');
                    var data_p = '<%-data_nd%>'.split(',');
                    var data_d = '<%-data_st%>'.split(',').map((date) => {
                        var D = new Date(date);
                        var Y = D.getFullYear();
                        var M = D.getMonth();
                        var Dd = D.getDate();
                        var fulldata = `${Y}년/ ${M+1}월/ ${Dd}일`;
                        return fulldata;
                    });

                    console.log(data_city);
                    $("#list1").append('<li>/----지점----//----날짜----//----일 매출----/</li>');
                    for(var i = 0; i < data_p.length ; i++ ){
                        $("#list1").append(`<li> ${data_reg[i]}, ${data_city[i]} || ${data_d[i]}:  ${data_p[i]}원 </li>`);
                    }
                }
                else if(data_type === 1){

                    var data_reg = '<%-data_st%>'.split(',');
                    var data_city = '<%-data_nd%>'.split(',');
                    var data_thn = '<%-data_rd%>'.split(',');
                    var data_seat = '<%-data_fr%>'.split(',');
                    var data_screen = '<%-data_fiv%>'.split(',');
                    var data_fext = '<%-data_six%>'.split(',');

                    $("#list1").append('<li> /----지점----//----상영관----//----좌석이상----//----스크린이상----//----소화기 재고----/    </li>');

                    for(var i = 0; i < data_reg.length; i++){

                        $('#list1').append(`<li> ${data_reg[i]}, ${data_city[i]} || ${data_thn[i]} : ${data_seat[i]} // ${data_screen[i]} // ${data_fext[i]}</li>`);

                    }
                }
            });
        </script>
        <footer>@MADE BY CAZ.NM</footer>
    </body>
</html>
